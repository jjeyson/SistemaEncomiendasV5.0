@using System.Data
@{
    DataTable dt = (DataTable)Session["CalcularPrecios"];
    foreach (DataRow r in dt.Rows)
    {
        <div class="form-group row">
            <label class="col-md-2">SubTotal :</label>
            <div class="col-md-3">
                <input name="txtSubTotal" class="form-control" type="text" maxlength="25" id="txtSubTotal" disabled="disabled" value="@r["Total"]" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">Descuento :</label>
            <div class="col-md-3">
                <input name="txtDescuento" class="form-control" type="text" maxlength="25" id="txtDescuento" disabled="disabled" value="@r["Descuento"]" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">Monto a Pagar :</label>
            <div class="col-md-3">
                <input name="txtMontoPagar" class="form-control" type="text" maxlength="25" id="txtMontoPagar" disabled="disabled" value="@r["MontoTotal"]" />
            </div>
        </div>
    }
}
